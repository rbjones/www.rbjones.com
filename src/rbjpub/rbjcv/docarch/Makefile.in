WEBFILES=$(HTML007) $(PDF) $(SRCDIRCPY2WEB) $(DOCPDF) $(HTMLTXT) $(TROFFPDF)

include $(TOPSRCDIR)/src/common/rules.mk

# Paths

vpath %.in $(SRCDIR)
vpath %.xml $(SRCDIR)
vpath %.xsl $(XLCOMDIR)

# targets

allppdoc: $(ALLPPDOC)

# rules

$(OLDPPQTEX): %.qtex: %.ptex ptex2qtex.pl
	perl -w ptex2qtex.pl $*

$(ALLPPDOC): %.doc : %.qtex
	dos2unix <$*.qtex >| $*.doc;
	conv_ascii $*

$(HTMTXT): %.htm : %.txt testconv.pl
	perl testconv.pl $*

$(TROFFPS): %.ps: %.txt
	groff $*.txt >| $*.ps

$(TROFFPDF): %.pdf: %.ps
	ps2pdf $*.ps 

