TROFFPDF=$(TROFFTXT:.txt=.pdf)

HTMTXT=$(TXT4HTM:.txt=.htm)

ALLPPDOC=$(OLDPPDOC) $(NEWPPDOC)
ALLTEX=$(PLAINTEX) $(OLDPPPTEX) $(NEWPPTEX)

TEXPDF=$(PLAINTEX:.tex=.pdf)
