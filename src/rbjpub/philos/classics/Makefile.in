ariscomm_hl.pdf: $(ARISCOMMTEX)

# Berkeley

berkeley: mkbrk01.pl berkeley.txt
	-rm -rf berkeley
	mkdir berkeley
	perl -w mkbrk01.pl

# Descartes' Meditations

descarte: mkmed01.pl medit.txt
	-rm -rf descarte
	mkdir descarte
	perl -w mkmed01.pl

# Leibniz's Monadology

leibniz: mkmon01.pl linkmon1.pl monad.txt
	-rm -rf leibniz
	mkdir leibniz
	perl -w mkmon01.pl

# Locke's Essay

locke: mklok01.pl locke.txt
	-rm -rf locke
	mkdir locke
	perl -w mklok01.pl

# Hume's Enquiry

echu01xml: mkechu01.pl echu.txt
	-rm -rf hume
	mkdir hume
	perl -w $^ index.xml echu hume
	touch echu01xml

$(ECHU01XML): echu01xml

$(ECHU01HTM): %.htm: %.xml hechu01.xsl echu01xml
	java net.sf.saxon.Transform -s:$< -xsl:hechu01.xsl
	rm $*.xml

hume: $(ECHU01HTM)

gitdescribe:
	-rm $*.tex
	export DESCRIPTION='$$(git describe)'
	echo $DESCRIPTION
	echo $DESCRIPTION > $*.tex

