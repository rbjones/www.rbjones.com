top_srcdir=@top_srcdir@
include $(top_srcdir)/top_srcdir.mk
RELSRCDIR=src/rbjpub/philos/classics
RELWEBDIR=texts/rbjpub/philos/classics

PPDB=
SUBDIRS=
PPDBDIR=
PPXML=
PPDOC=$(PPXML:.xml=.doc)
# Plain ProofPower documents (not from XML)
PPPDOC=
PPLDS=$(PPXML:.xml=.lds)
PPTH=
PPTHD=$(PPTH:.th=.thd)
ORGANTXT=mkaris_catego2.txt mkaris_interp2.txt mkaris_poster2.txt mkaris_prior2.txt \
	mkaris_topics2.txt organon.txt mkaris_soph_ref.txt
METAPTXT=mkaris_metaphysics.txt metaphysics.txt
CLASSICSTXT=echu.txt kantcpur.txt kantstru.txt locke.txt medit.txt monad.txt tractatus.txt \
	$(ORGANTXT) $(METAPTXT)
ARISPERL=mkaris01.pl mkaris02.pl mkaris03.pl trans.pl scan.pl
CLASSICSPERL=mkechu01.pl mklok01.pl mkkant03.pl mkkant04.pl trac2html.pl mkmed01.pl \
	 mkmon01.pl linkmon1.pl \
	$(ARISPERL)

TEXPDF= mbook_draft.pdf mbook_final.pdf obook_draft.pdf obook_final.pdf 
TEXFILES=$(TEXPDF:.pdf=.tex) mbook.tex obook.tex
HTMFILES=class001.htm

XML007=$(PPXML)

ENTFILES=pp-symbol.ent

SRCDIRCPY=$(PPPDOC) $(CLASSICSPERL) $(CLASSICSTXT) $(TEXFILES) $(HTMFILES)
XLDPDIRCPY=$(ENTFILES)

include $(TOPSRCDIR)/build/common/vars.mk

TARGETS=arisorgan arisorganp arismetap arismetapp kantcpur
BUILDEXTRAS=arisorgan arismetapp kantcpur

#WEBFILES=$(HTML007)
WEBFILES=$(HTMFILES)
WEBSUBDIRS=aristotl kant

include $(TOPSRCDIR)/src/common/rules.mk

# Paths

vpath %.in $(SRCDIR)
vpath %.xml $(SRCDIR)
vpath %.xsl $(XLCOMDIR)

# Rules

$(PPTH): $(PPDB).dbts 
	touch $@

#Specific Rules

arisorganp o.tex: $(ARISPERL) $(ORGANTXT)
	-mkdir aristotl
	perl -w mkaris01.pl o organon.txt "Aristotle - The Organon"
	touch arisorganp

obook_draft.pdf obook_final.pdf: obook.tex o.tex

arisorgan: arisorganp obook_draft.pdf
	cp obook_draft.pdf aristotl
	touch arisorgan

arismetapp m.tex: $(ARISPERL) $(METAPTXT)
	-mkdir aristotl
	perl -w mkaris01.pl m metaphysics.txt "Aristotle"
	touch arismetapp

mbook_draft.pdf mbook_final.pdf: mbook.tex m.tex

arismetap: arismetapp mbook_draft.pdf
	cp mbook_draft.pdf aristotl
	touch arismetap

kantcpurm: mkkant03.pl kantcpur.txt kantstru.txt
	-rm -rf kant
	mkdir kant
	perl -w $^ kant
	touch kantcpurm

kantcpur: mkkant04.pl kantcpur.txt kantstru.txt kantcpurm
	perl -w $^ kant
	touch kantcpur

obook.tex: o.tex

# Dependencies

