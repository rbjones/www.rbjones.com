# Rules

build: pdf doc_theories.tex

rbjmkf: $(SRCDIRCPY) $(COMDIRCPY) t000abs.tex
	touch rbjmkf

pdf: rbjmkf
	make -f rbj.mkf pdf

rbj.src.tgz: rbjmkf
	make -f rbj.mkf src

$(TPDF): %.pdf: %.doc rbj.mkf rbjmkf
	make -f rbj.mkf $*.pdf

