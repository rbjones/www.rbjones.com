consts
    jstamp :: judgement => stamp
    jauth  :: judgement => authority
    jauths :: judgement => authority set
    jsent  :: judgement => sentence

primrec
    "jstamp (Assert st as se) = st"
primrec
    "jauth (Endorse a as) = a"
