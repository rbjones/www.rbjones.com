	(¨MkVarType: STRING ≠ 'TYPEÆ,
				¨Ãx:STRING∑ Hd x = '''Æ),
	(¨MkCType: STRING ≠ 'TYPE LIST ≠'TYPEÆ,
				¨Ã(x:STRING, y:'TYPE LIST)∑ ≥ Hd x = '''Æ),
	(¨MkVarTerm: STRING ≠ 'TYPE ≠'TERMÆ,
				¨Ã(x:STRING, y:'TYPE)∑ Hd x = '''Æ),
	(¨MkCTerm: STRING ≠ 'TYPE ≠'TERMÆ,
				¨Ã(x:STRING, y:'TYPE)∑ ≥ Hd x = '''Æ),
	(¨MkLamTerm: STRING ≠ 'TYPE ≠ 'TERM ≠ 'TERMÆ,
