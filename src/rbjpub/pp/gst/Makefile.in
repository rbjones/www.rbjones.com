#HTML004m=$(XML004:.xml=-m.html)

HTMLTHLSi=$(HTMLTHLS:.html=-i.html)
HTMLTHLSm=$(HTMLTHLS:.html=-m.html)

SRCDIRCPY=$(XML005) gst_theories.doc

ENTFILES=pp-symbol.ent

XLDPDIRCPY=$(ENTFILES)

include $(TOPSRCDIR)/build/common/vars.mk

